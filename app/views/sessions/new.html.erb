<h1>Log in</h1>
<div class ="form">
<div style='width: 20%; margin-left: 30px; margin-top: 30px;'>
  <%= form_for(:session, url: login_path) do |f| %>
  <%= label_tag 'Email:' %>
  <%= f.text_field :email, placeholder: 'Your email...', class: "form-control", id: "formGroupExampleInput2" %>
  <br><br>
  <%= label_tag 'Password:' %>
  <%= f.text_field :password, type: 'password', placeholder: 'Your password...', class: "form-control", id: "formGroupExampleInput2" %>
  <br><br>
  <%= f.submit "Login", class: "btn btn-success"  %>
<% end %>
</div>
</div>
<br>
<p>New user ? <%= link_to "Sign up now!", new_user_path %></p>
